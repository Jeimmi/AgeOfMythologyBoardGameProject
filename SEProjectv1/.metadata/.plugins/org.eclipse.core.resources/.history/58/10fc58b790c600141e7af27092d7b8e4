/**
 * @author Lyndon Kondratczyk
 * @version 3/9/15
 * 
 * A tool that creates a menu for selecting, returning and removing 
 * entries from a generic ArrayList
 */
import java.util.ArrayList;
import java.util.Random;

public class RandomSelection <T>{
	ArrayList<T> selections;
	
	/**
	 * The constructor for the RandomSelection
	 * 
	 * @param list The list being selected from
	 */
	public RandomSelection(ArrayList<T> list){
		selections = list;
	}
	
	public T getRandomFromList () {
		Random rand = new Random();
		int index = rand.nextInt(selections.size());
		T temp = selections.get(index);
		selections.remove(index);
		return temp;
		
	}
	
	public void returnToList(T returnValue){
		selections.add(returnValue);
	}
}
